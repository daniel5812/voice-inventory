generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model UserProfile {
  id        String     @id        // ‚Üê auth.users.id (UUID)
  email     String
  fullName  String?
  createdAt DateTime   @default(now())

  items     Item[]
  movements Movement[]
}

model Item {
  id        Int        @id @default(autoincrement())
  name      String
  quantity  Int        @default(0)

  userId    String
  user      UserProfile @relation(fields: [userId], references: [id])

  movements Movement[]
}


model Movement {
  id        Int      @id @default(autoincrement())
  itemId    Int
  userId    String

  type      String
  quantity  Int
  rawText   String
  createdAt DateTime @default(now())

  item      Item        @relation(fields: [itemId], references: [id])
  user      UserProfile @relation(fields: [userId], references: [id])
}

