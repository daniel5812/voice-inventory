generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Item {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  quantity  Int        @default(0)
  movements Movement[]
}

model Movement {
  id        Int      @id @default(autoincrement())
  item      Item     @relation(fields: [itemId], references: [id])
  itemId    Int
  type      String   // "add" | "remove"
  quantity  Int
  rawText   String
  createdAt DateTime @default(now())
}
